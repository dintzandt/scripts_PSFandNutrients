#model with varIdent on PSFT
library(nlme)

vf3 <- varIdent(form = ~ 1|Species) #works well

M5 <- gls(PSFT ~ Species * Nutrient,
          data = PSF2, weights = vf3)

summary(M5) 
Anova(M5, type=3)

E5 <- resid(M5, type = "pearson")
F5 <- fitted(M5)

par(mfrow = c(2, 2))
