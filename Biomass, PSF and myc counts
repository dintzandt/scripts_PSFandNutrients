#model with varIdent
library(nlme)

vf <- varIdent(form = ~ 1|Nutrient*Myc) #best

M1 <- gls(PSFR ~ Nutrient * Myc,
          data = Lhplus, weights = vf)

summary(M1) 
Anova(M1, type=3)

E1 <- resid(M1, type = "pearson")
F1 <- fitted(M1)

